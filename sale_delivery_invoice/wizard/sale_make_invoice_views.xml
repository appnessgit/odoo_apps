<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sale_advance_payment_inv_inherit" model="ir.ui.view">
            <field name="name">Invoice Orders (Pickings)</field>
            <field name="model">sale.advance.payment.inv</field>
            <field name="inherit_id" ref="sale.view_sale_advance_payment_inv"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='deposit_taxes_id']" position="after">
                    <field name="sale_id" invisible="1"/>
                    <field name="picking_ids" widget="many2many_tags"
                       attrs="{'invisible': [('advance_payment_method', 'not in', ['delivery'])],
                       'required': [('advance_payment_method', '=', 'delivery')]}"
                       domain="[('sale_id', '=', sale_id), ('fully_invoiced', '=', False),
                        ('picking_type_code', '=', 'outgoing'), ('state', '=', 'done')]"
                       options="{'no_create': 1, 'no_open': 1}"
                    />
                </xpath>
            </field>
        </record>
    </data>
</odoo>