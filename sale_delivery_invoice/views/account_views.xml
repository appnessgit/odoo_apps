<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="before">
                    <label for="picking_ids" string="Deliveries" attrs="{'invisible': [('type', 'not in', ['out_invoice', 'out_refund'])]}"/>
                    <div class="o_row" name="pickings" attrs="{'invisible': [('type', 'not in', ['out_invoice', 'out_refund'])]}">
                        <field name="picking_ids" widget="many2many_tags"
                           attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('type', 'not in', ['out_invoice', 'out_refund'])]}"
                           domain="[
                             ('picking_type_code', '=', 'outgoing'),
                             ('partner_id', '=', partner_id),
                             ('fully_invoiced', '=', False),
                             ('sale_id', '!=', False),
                             ('state', '=', 'done')]"
                           options="{'no_create': 1, 'no_open': 1}"
                        />
                        <span class="oe_edit_only" attrs="{'invisible': [('state', '!=', 'draft')]}">
                            <button name="get_lines_from_pickings" icon="fa-refresh" context="{'check_move_validity': False}" type="object" help="Add delivery lines"/>
                        </span>
                    </div>
                </xpath>
                <xpath expr="//page[@id='invoice_tab']/field[@name='invoice_line_ids']/form/sheet/field[@name='name']" position="after">
                    <notebook attrs="{'invisible': [ ('type', 'not in', ['out_invoice', 'out_refund'])]}">
                        <field name="type" invisible="1"/>
                        <page string="Delivered Items" attrs="{'invisible': [('has_stock_moves', '=', False)]}">
                            <field name="stock_move_ids" readonly="1">
                                <form>
                                    <group>
                                        <field name="product_id"/>
                                        <field name="move_line_id" invisible="1"/>
                                        <field name="stock_move_id"/>
                                        <field name="quantity"/>
                                        <field name="state" invisible="1"/>
                                    </group>
                                </form>
                                <tree>
                                    <field name="product_id"/>
                                    <field name="move_line_id" invisible="1"/>
                                    <field name="stock_move_id"/>
                                    <field name="quantity"/>
                                    <field name="state" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <field name="has_stock_moves" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>