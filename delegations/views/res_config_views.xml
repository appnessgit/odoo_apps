<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_hr_portal_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.hr.portal.form</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="25"/>
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='hr']" position="inside">
                    <t>
                        <h2>Delegations</h2>
                        <div class="row mt16 o_settings_container">

                            <!--Leaves-->
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="module_hr_holidays_delegations"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="module_hr_holidays_delegations"/>
                                    <div class="text-muted" attrs="{'invisible': [('module_hr_holidays_delegations', '=', True)]}">
                                        This feature requires Leaves module.
                                    </div>
                                </div>
                            </div>

                         </div>

                    </t>
                </xpath>
            </field>
        </record>


    </data>
</odoo>