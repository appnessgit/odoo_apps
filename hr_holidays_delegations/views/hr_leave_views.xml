<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_leave_view_form_inherit" model="ir.ui.view">
            <field name="name">hr.leave.view.form.inherit</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="delegate_employee_id" options="{'no_create': 1, 'no_open': 1}" domain="[('user_id', '!=', False), ('id', '!=', employee_id)]"/>
                    <field name="delegation_id" attrs="{'invisible': [('delegation_id', '=', False)]}" readonly="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>